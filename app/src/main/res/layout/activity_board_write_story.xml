<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board.BoardWriteMateActivity">

    <TextView

        android:id="@+id/tvWriteStoryTitle"
        android:layout_width="0dp"
        android:layout_height="60sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:text="댕댕이들이랑 복작복작 수다떨기!"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/imgWriteStory"
        android:layout_width="64dp"


        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/tvWriteStoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvWriteStoryTitle"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="최대 1장의 사진 등록이 가능해요"
        app:layout_constraintBottom_toBottomOf="@+id/imgWriteStory"
        app:layout_constraintStart_toEndOf="@+id/imgWriteStory"
        app:layout_constraintTop_toTopOf="@+id/imgWriteStory" />



    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="내용입력"
        app:layout_constraintStart_toStartOf="@+id/imgWriteStory"
        app:layout_constraintTop_toBottomOf="@+id/imgWriteStory" />

    <Button

        android:id="@+id/btnWriteStoryUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업로드"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etWriteStory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="내용을 입력해 주세요."
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        app:layout_constraintEnd_toEndOf="@+id/tvWriteStoryTitle"
        app:layout_constraintStart_toStartOf="@+id/tvProfileEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>