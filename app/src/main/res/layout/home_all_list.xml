<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/imgHomeAllProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/dogprofile"
        app:civ_border_color="#000000"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/tvHomeAllName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="효지"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgHomeAllProfile"
        app:layout_constraintStart_toEndOf="@+id/imgHomeAllProfile"
        app:layout_constraintTop_toTopOf="@+id/imgHomeAllProfile" />

    <TextView

        android:id="@+id/tvHomeAllContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="저는 효지에요 댕댕이 친구 구합니다 ㅎㅎ"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgHomeAllProfile"
        app:layout_constraintTop_toBottomOf="@+id/imgHomeAllProfile" />

    <TextView

        android:id="@+id/tvHomeAllTown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="동명동"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvHomeAllContent"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeAllContent" />

    <TextView

        android:id="@+id/tvHomeAllHr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="5시간전"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvHomeAllTown"
        app:layout_constraintStart_toEndOf="@+id/tvHomeAllTown"
        app:layout_constraintTop_toTopOf="@+id/tvHomeAllTown" />

    <ImageView

        android:id="@+id/imgHomeAllHeart"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvHomeAllHeartCount"
        app:layout_constraintEnd_toStartOf="@+id/tvHomeAllHeartCount"
        app:layout_constraintTop_toTopOf="@+id/tvHomeAllHeartCount"
        app:srcCompat="@drawable/emptyheart" />

    <TextView

        android:id="@+id/tvHomeAllHeartCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeAllContent" />

    <TextView

        android:id="@+id/tvHomeAllCommentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/imgHomeAllHeart"
        app:layout_constraintEnd_toStartOf="@+id/imgHomeAllHeart"
        app:layout_constraintTop_toTopOf="@+id/imgHomeAllHeart" />

    <ImageView

        android:id="@+id/imgHomeAllComment"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvHomeAllCommentCount"
        app:layout_constraintEnd_toStartOf="@+id/tvHomeAllCommentCount"
        app:layout_constraintTop_toTopOf="@+id/tvHomeAllCommentCount"
        app:srcCompat="@drawable/reply" />

</androidx.constraintlayout.widget.ConstraintLayout>